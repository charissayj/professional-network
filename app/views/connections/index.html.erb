<a href="/users">My profile</a>
<a href="logout" data-method="delete">Logout</a>

<p>Users you may want to connect with:</p>

<table class="table">
	<thead>
		<th>Name</th>
		<th>Action</th>
	</thead>
	<tbody>
		<% @users.each do |user| %>
         <% unless current_user==user %>
            <tr>
               <td><a href="/users/<%= user.id %>"><%= user.username.titleize %></a></td>
               <td>
                  <form action="/create/<%= user.id %>" method='post'>
                     <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
                     <button class='btn btn-primary' type='submit'>Connect</button>
                  </form>
               </td>
            </tr>
         <% end %>
      <% end %>
	</tbody>
</table>